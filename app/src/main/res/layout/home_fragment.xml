<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:padding="2dp"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:id="@+id/aaa"
            >


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:cardCornerRadius="10dp">
                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/auto_slider"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:sliderAnimationDuration="2000"
                            app:sliderIndicatorAnimationDuration="2000"
                            app:sliderAutoCycleDirection="right"
                            app:sliderScrollTimeInSec="3"
                            />
                </androidx.cardview.widget.CardView>
        <!--</LinearLayout>-->



                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    app:cardCornerRadius="5dp"
                    android:layout_marginTop="15dp">
                        <com.smarteist.autoimageslider.SliderView
                            android:id="@+id/banner_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:sliderAnimationDuration="600"
                            app:sliderIndicatorAnimationDuration="600"
                            app:sliderAutoCycleDirection="right"
                            app:sliderScrollTimeInSec="5"
                            />
                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                        <TextView
                            android:id="@+id/category_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/categories"
                            android:textSize="@dimen/_16sdp"
                            android:textColor="@color/black"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true" />
                        <TextView
                            android:id="@+id/category_show_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/show_all"
                            android:textSize="@dimen/_15sdp"
                            android:textColor="@color/black"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentEnd="true"
                            app:drawableEndCompat="@drawable/ic_baseline_arrow_forward_24"
                            app:drawableRightCompat="@drawable/ic_baseline_arrow_forward_24"
                             />
                </RelativeLayout>






                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    />














                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/just_for_you"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_marginTop="5dp"/>








                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/product_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                />







        <TextView
            android:id="@+id/internet_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Internet Connection!!"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_18sdp"
            android:textColor="#FF0000"
            android:visibility="gone"/>






        </LinearLayout>



</androidx.core.widget.NestedScrollView>